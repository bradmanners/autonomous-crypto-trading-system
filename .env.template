# ============================================
# Autonomous Crypto Trading System - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# Trading Configuration
# ============================================
TRADING_MODE=paper  # paper or live
INITIAL_CAPITAL=1000.00
MAX_POSITIONS=3
RISK_PER_TRADE=0.02  # 2% risk per trade
MAX_PORTFOLIO_HEAT=0.06  # 6% total portfolio risk
DAILY_LOSS_LIMIT=0.05  # 5% daily loss limit
MAX_DRAWDOWN_THRESHOLD=0.15  # 15% drawdown threshold
EMERGENCY_STOP_THRESHOLD=0.25  # 25% emergency stop

# ============================================
# Asset Configuration
# ============================================
CRYPTO_PAIRS=BTC/USDT,ETH/USDT,SOL/USDT,AVAX/USDT,MATIC/USDT
BASE_CURRENCY=USDT

# ============================================
# Binance API
# ============================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true  # Set to false for live trading

# ============================================
# Claude AI (Anthropic)
# ============================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ============================================
# Database Configuration
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_system
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=your_secure_password_here

# TimescaleDB
TIMESCALEDB_ENABLED=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ============================================
# Social Media APIs
# ============================================

# Twitter/X API
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=TradingBot/1.0

# ============================================
# News & Data APIs
# ============================================

# CryptoPanic
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key

# Alternative.me (Fear & Greed Index - Free, no key needed)
FEAR_GREED_API_URL=https://api.alternative.me/fng/

# Alpha Vantage (for future stock data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Glassnode (On-chain data)
GLASSNODE_API_KEY=your_glassnode_api_key

# CoinGecko (Free tier available)
COINGECKO_API_KEY=your_coingecko_api_key  # Optional for free tier

# NewsAPI
NEWS_API_KEY=your_newsapi_key

# ============================================
# Email Notifications
# ============================================
EMAIL_ENABLED=true
EMAIL_PROVIDER=sendgrid  # sendgrid or smtp

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=trading-bot@yourdomain.com

# SMTP (alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM_EMAIL=your_email@gmail.com

# Notification Recipients
NOTIFICATION_EMAIL=your_email@gmail.com

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# Prometheus
PROMETHEUS_PORT=9090

# ============================================
# ML Model Configuration
# ============================================
MODEL_RETRAIN_INTERVAL=168  # Hours (weekly)
MODEL_LOOKBACK_DAYS=365
MODEL_VALIDATION_SPLIT=0.2
USE_GPU=false

# XGBoost
XGBOOST_N_ESTIMATORS=100
XGBOOST_LEARNING_RATE=0.1
XGBOOST_MAX_DEPTH=6

# Feature Engineering
FEATURE_WINDOW_HOURS=168  # 7 days

# ============================================
# Agent Configuration
# ============================================

# Data Collection
DATA_COLLECTION_INTERVAL=3600  # Seconds (1 hour)
DATA_RETENTION_DAYS=365

# Orchestrator
ORCHESTRATOR_DECISION_THRESHOLD=0.6  # Minimum confidence for action

# Continuous Improvement
CI_PROPOSAL_INTERVAL=86400  # Seconds (daily)
CI_BACKTEST_DAYS=30

# ============================================
# Risk Management
# ============================================
STOP_LOSS_ATR_MULTIPLIER=2.0
TRAILING_STOP_ENABLED=true
TAKE_PROFIT_R_MULTIPLE=2.0  # Risk-reward ratio

# Kelly Criterion
KELLY_FRACTION=0.25  # Fractional Kelly

# ============================================
# Backtesting
# ============================================
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-12-31
BACKTEST_INITIAL_CAPITAL=1000
BACKTEST_COMMISSION=0.001  # 0.1% per trade

# ============================================
# System Configuration
# ============================================
TIMEZONE=UTC
DEBUG_MODE=false

# Airflow
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://trading_user:your_secure_password_here@localhost:5432/trading_system

# ============================================
# Feature Flags
# ============================================
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_ONCHAIN_ANALYSIS=true
ENABLE_MACRO_ANALYSIS=true
ENABLE_TRUMP_MONITORING=true
ENABLE_ML_PREDICTIONS=true
ENABLE_CONTINUOUS_IMPROVEMENT=true

# ============================================
# Trump/Political Monitoring
# ============================================
TRUMP_TWITTER_ACCOUNTS=@realDonaldTrump,@POTUS,@WhiteHouse
POLITICAL_KEYWORDS=tariff,china,fed,federal reserve,crypto,bitcoin
GEOPOLITICAL_KEYWORDS=ukraine,russia,israel,iran,china,taiwan

# ============================================
# Development
# ============================================
ENVIRONMENT=development  # development, staging, production
